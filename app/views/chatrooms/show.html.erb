
<p>
  <strong>Chatroom Name:</strong>
  <%= @chatroom.name %>
</p>

<hr>

<div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
  <% @chatroom.messages.order(created_at: :desc).limit(100).reverse.each do |message| %>
    <%= render message %>
  <% end %>
</div>
<br>
<%= form_for [@chatroom, Message.new]  do |f| %>
  <%= f.text_field :body, class: "form-control", autofocus: true %>
<% end %>
